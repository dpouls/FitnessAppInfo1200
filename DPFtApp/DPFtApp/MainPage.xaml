<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DPFtApp.MainPage"
             Title="Dallin's Fitness App">

<!--Grid goes here-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="WelcomeMessage" Text="Welcome Dallin!" Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Label x:Name="CurrentDate" Text="Today's Date" Grid.Row="1" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Start"/>
        <Button x:Name="MyProfileNavBtn" Text="My Profile" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Clicked="MyProfileNavBtn_Clicked"/>
        <Button x:Name="BMRNavButton" Text="MY BMR PAGE" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Clicked="BMRNavButton_Clicked"/>
        <!--Nav button for timer page -->
        <Button x:Name="TimerNavButton" Text="SIMPLE TIMER" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Clicked="TimerNavButton_Clicked"/>
    </Grid>

</ContentPage>
